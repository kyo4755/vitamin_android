<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/main_fragment_button_panel">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/study_fragment_btn_youglish"
            android:text="@string/study_fragment_btn_youglish"
            android:background="@color/white"
            android:layout_weight="1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/study_fragment_btn_word_cloud"
            android:text="@string/study_fragment_btn_word_cloud"
            android:background="@color/white"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/study_fragment" />

</LinearLayout>